<style>
    .section__marquee {
        overflow: hidden;
    }
    .marquee-ctr {
        display: flex;
        align-items: center;
    }

    .marquee-track {
        white-space: nowrap;
        will-change: transform;
        animation: marquee {{ section.settings.marquee_speed }}0s linear infinite;
    }

    .marquee-content {
        display: flex;
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        background-color: {{ section.settings.background_color }};
    }

    .marquee-content .marquee__title {
        padding: 0 42px;
        margin-bottom: 0;
    }

    .marquee-content .marquee__title p {
        font-size: {{ section.settings.marquee_font }}px;
        color: {{ section.settings.text_color }};
    }

    @keyframes marquee {
        0% {
            transform: translate3d(0, 0, 0);
        }

        100% {
            transform: translate3d(-50%, 0, 0);
        }
    }

</style>

<div class="section__marquee">
	<div class="marquee-ctr">
		<div class="marquee-track">
            <div class="marquee-content">
                {% for i in (1..25) %}
                    {%- for block in section.blocks -%}
                        {% if block.settings.heading != blank %}
                            <h2 class="marquee__title marquee__title-{{ block.settings.heading_font }}">
                                {{ block.settings.heading }}
                            </h2>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
		</div>
	</div>
</div>

{% schema %}
{
	"name": "Marquee",
	"tag": "section",
	"class": "marquee",
	
	"settings": [
		{
			"type": "range",
			"id": "marquee_speed",
			"min": 5,
			"max": 200,
			"step": 5,
			"default": 20,
			"unit": "s",
			"label": "Marquee speed"
		},
		{
			"type": "range",
			"id": "marquee_font",
			"min": 10,
			"max": 200,
			"step": 2,
			"unit": "px",
			"label": "Marquee font size",
			"default": 120
		},
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default": "#ffffff"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background color",
            "default": "#000000"
        },
		{
			"type": "range",
			"id": "padding_top",
			"min": 0,
			"max": 200,
			"step": 5,
			"default": 0,
			"unit": "px",
			"label": "Padding top"
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 200,
			"step": 5,
			"default": 0,
			"unit": "px",
			"label": "Padding bottom"
		}
	],
    "blocks": [
		{
            "type": "text",
            "name": "Marquee text",
            "settings": [
                {
                    "type": "richtext",
                    "id": "heading",
                    "default": "<p>Write any text here</p>",
                    "label": "Marquee text"
                },
                {
                    "type": "select",
                    "id": "heading_font",
                    "label": "Heading font",
                    "options": [
                        {
                            "value": "default",
                            "label": "Default"
                        },
                        {
                            "value": "alchemist",
                            "label": "Alchemist"
                        },
                        {
                            "value": "kimmell",
                            "label": "Kimmell"
                        },
                        {
                            "value": "garriger",
                            "label": "Garriger"
                        },
                        {
                            "value": "asplin",
                            "label": "Asplin"
                        }
                    ],
                    "default": "default",
                    "info": "Default will render theme setting font"
                }
            ]
        }
	],
	"presets": [
		{
			"name": "Marquee",
			"blocks": [
				{
					"type": "text"
				}
			]
		}
	]
}
{% endschema %}
